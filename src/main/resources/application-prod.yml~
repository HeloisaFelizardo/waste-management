server:
  port: ${PORT:8080}
  tomcat:
    threads:
      max: 200
    connection-timeout: 5000

spring:
  datasource:
    url: ${DATABASE_URL}
    username: ${DATABASE_USER}
    password: ${DATABASE_PASSWORD}
    driver-class-name: org.postgresql.Driver
    hikari:
      maximum-pool-size: 10
      minimum-idle: 5
      idle-timeout: 300000
      connection-timeout: 20000
  jpa:
    hibernate:
      ddl-auto: create-drop #validate / update / create / create-drop
    show-sql: false
    open-in-view: true
    properties:
      hibernate:
        format_sql: false
        dialect: org.hibernate.dialect.PostgreSQLDialect
        jdbc:
          batch_size: 50
        order_inserts: true
        order_updates: true

# Desabilita o console H2 em produção
h2:
  console:
    enabled: false

# Configurações de segurança
security:
  admin:
    email: ${ADMIN_EMAIL}
    initial-password: ${ADMIN_INITIAL_PASSWORD}

# Configurações de logging
logging:
  level:
    root: INFO
    org.springframework: INFO
    com.gestaoresiduos: INFO
  file:
    name: ${LOG_FILE:logs/application.log}
